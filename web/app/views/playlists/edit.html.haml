#content.edit-playlist
  .wrapper-content
    .main
      .wrapper-main
        =render "index/playlist_header"

        #suggestions          
          .wrapper-suggestions
            %h2 Suggestions
            =render "playlists/suggestions"
        =render "index/playlist"
        -if @new
          .control-btns
            %a.save{:href=>"/#{current_member.username}/#{@playlist.id}/save"} Save
            %a.discard{:href=>"/#{current_member.username}"} Discard

=content_for(:javascripts) do
  :javascript
    var edit= #{@editing};
    jQuery(document).ready(function($) {
      $("#playlist").show();
    })
  = javascript_include_tag "edit"